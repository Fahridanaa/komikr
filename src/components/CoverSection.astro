---
import { Badge } from "@/components/ui/badge";

interface Props {
	title: string;
	status: string;
	type: string;
	coverImage?: string;
}

const {
	title,
	status,
	type,
	coverImage = "https://images.unsplash.com/photo-1560942485-b2a11cc13456?w=500&h=700&fit=crop",
} = Astro.props;
---

<div class="space-y-4">
	<div class="aspect-[3/4] overflow-hidden rounded-lg">
		<img
			src={coverImage}
			alt={`${title} Cover`}
			class="object-cover w-full h-full hover:scale-105 transition-transform duration-300"
		/>
	</div>
	<div class="space-y-2">
		<Badge
			client:load
			variant="outline"
			className="w-full justify-center text-sm capitalize">
			{status}
		</Badge>
		<Badge
			client:load
			variant="secondary"
			className="w-full justify-center text-sm capitalize">
			{type}
		</Badge>
	</div>
</div>
